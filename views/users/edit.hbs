<h1>Update {{user.firstName}}'s information</h1>

<form class="form_container" action="/users/{{user._id}}?_method=PUT" method="POST">
    <div class="form_field">
        <label for="firstName">First Name</label>
        <input type="text" name="firstName" value="{{user.firstName}}" required/>
    </div>

    <div class="form_field">
        <label for="lastName">Last Name</label>
        <input type="text" name="lastName" value="{{user.lastName}}" required/>
    </div>

    <div class="form_field">
        <label for="photoUrl">Photo Link</label>
        <input type="text" name="photoUrl" value="{{user.photoUrl}}" />
    </div>

    <div class="button_container">
        <input class="btn" type="submit" value="Update Profile">
    </div>
</form>